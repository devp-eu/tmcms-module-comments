CREATE TABLE `m_comments` (  `id` int(10) unsigned NOT NULL AUTO_INCREMENT,  `client_id` int(10) unsigned NOT NULL,  `item_type` varchar(255) NOT NULL,  `item_id` int(10) unsigned NOT NULL,  `text` text NOT NULL,  `date_added` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP,  PRIMARY KEY (`id`),  KEY `client_id` (`client_id`,`item_type`,`item_id`)) ENGINE=InnoDB DEFAULT CHARSET=utf8